@model HLShop.Web.Models.ApplicationUserViewModel
@using BotDetect.Web.Mvc

@{
    ViewBag.Title = "UpdateAccountInfor";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="register">
    @using (Html.BeginForm("UpdateAccountInforPost", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken(); //ngan ko cho submit lien tuc
        @Html.ValidationSummary(false, "", new { @class = "error" });

        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Cập nhật thông tin thành công!</strong>
            </div>
        }

        <div class="clearfix"></div>
        <div class="register-top-grid">
            <h3>CẬP NHẬT THÔNG TIN</h3>
            <div class="mation">
                <span>Họ tên<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName, new { placeholder = @Model.FullName })
                <span>Địa chỉ<label>*</label></span>
                @Html.TextBoxFor(model => model.Address, new { placeholder = @Model.Address })
                <span>Ngày sinh<label>*</label></span>
                @Html.TextBoxFor(model => model.BirthDay, new { placeholder = @Model.BirthDay })
                <span>Email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email, new { placeholder = @Model.Email })
                <span>Số điện thoại<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = @Model.PhoneNumber })
                <span>Mã xác nhận<label>*</label></span>
                @*//captcha*@
                @{ MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");}
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")
            </div>
        </div>
        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="Cập nhật">
            <div class="clearfix"> </div>
        </div>
    }
</div>